import os

tarefas = []
tarefas_concluidas = []

def limpar():
    os.system("cls" if os.name == "nt" else "clear")

def listar():
    if not tarefas:
        print("Nenhuma tarefa pendente.")
    else:
        for i, t in enumerate(tarefas, 1):
            print(f"{i}. {t}")
    if tarefas_concluidas:
        print("\nConcluídas:")
        for i, t in enumerate(tarefas_concluidas, 1):
            print(f"  - {t}")

def add():
    texto = input("Digite a nova tarefa: ").strip()
    if texto:
        tarefas.append(texto)
        print("Adicionada! ₊˚⊹♡")
    else:
        print("Nada foi adicionado.")

def finish():
    if not tarefas:
        print("Não há tarefas para concluir.")
        return
    listar()
    try:
        idx = int(input("\nNúmero da tarefa para concluir: "))
        if 1 <= idx <= len(tarefas):
            t = tarefas.pop(idx - 1)
            tarefas_concluidas.append(t)
            print(f"-`♡´- Concluída: {t}")
        else:
            print("Índice inválido.")
    except ValueError:
        print("Digite um número válido.")

def remove():
    if not tarefas:
        print("Não há tarefas para remover.")
        return
    listar()
    try:
        idx = int(input("\nNúmero da tarefa para remover: "))
        if 1 <= idx <= len(tarefas):
            t = tarefas.pop(idx - 1)
            print(f"🗑️ Removida: {t}")
        else:
            print("Índice inválido.")
    except ValueError:
        print("Digite um número válido.")

def menu():
    while True:
        limpar()
        print("To-do list ♡\n")
        print("1 - Adicionar nova tarefa")
        print("2 - Concluir tarefa")
        print("3 - Remover tarefa")
        print("4 - Listar tarefas")
        print("5 - Sair")
        print("\n. ݁₊ ⊹ . ݁ ⟡ ݁ . ⊹ ₊ ݁.\n")

        opcao = input("Escolha uma opção: ").strip()
        limpar()

        if opcao == "1":
            add()
        elif opcao == "2":
            finish()
        elif opcao == "3":
            remove()
        elif opcao == "4":
            listar()
        elif opcao == "5":
            print("Até mais! ˙ᵕ˙")
            break
        else:
            print("Opção inválida.")

        input("\nPressione Enter para continuar...")

if __name__ == "__main__":
    menu()
