import os

tarefas = []
tarefas_concluidas = []

def limpar():
    os.system("cls" if os.name == "nt" else "clear")

def listar():
    if not tarefas:
        print("Nenhuma tarefa pendente.")
    else:
        for i, t in enumerate(tarefas, 1):
            print(f"{i}. {t}")
    if tarefas_concluidas:
        print("\nConcluÃ­das:")
        for i, t in enumerate(tarefas_concluidas, 1):
            print(f"  - {t}")

def add():
    texto = input("Digite a nova tarefa: ").strip()
    if texto:
        tarefas.append(texto)
        print("Adicionada! â‚ŠËšâŠ¹â™¡")
    else:
        print("Nada foi adicionado.")

def finish():
    if not tarefas:
        print("NÃ£o hÃ¡ tarefas para concluir.")
        return
    listar()
    try:
        idx = int(input("\nNÃºmero da tarefa para concluir: "))
        if 1 <= idx <= len(tarefas):
            t = tarefas.pop(idx - 1)
            tarefas_concluidas.append(t)
            print(f"-`â™¡Â´- ConcluÃ­da: {t}")
        else:
            print("Ãndice invÃ¡lido.")
    except ValueError:
        print("Digite um nÃºmero vÃ¡lido.")

def remove():
    if not tarefas:
        print("NÃ£o hÃ¡ tarefas para remover.")
        return
    listar()
    try:
        idx = int(input("\nNÃºmero da tarefa para remover: "))
        if 1 <= idx <= len(tarefas):
            t = tarefas.pop(idx - 1)
            print(f"ğŸ—‘ï¸ Removida: {t}")
        else:
            print("Ãndice invÃ¡lido.")
    except ValueError:
        print("Digite um nÃºmero vÃ¡lido.")

def menu():
    while True:
        limpar()
        print("To-do list â™¡\n")
        print("1 - Adicionar nova tarefa")
        print("2 - Concluir tarefa")
        print("3 - Remover tarefa")
        print("4 - Listar tarefas")
        print("5 - Sair")
        print("\n. İâ‚Š âŠ¹ . İ âŸ¡ İ . âŠ¹ â‚Š İ.\n")

        opcao = input("Escolha uma opÃ§Ã£o: ").strip()
        limpar()

        if opcao == "1":
            add()
        elif opcao == "2":
            finish()
        elif opcao == "3":
            remove()
        elif opcao == "4":
            listar()
        elif opcao == "5":
            print("AtÃ© mais! Ë™áµ•Ë™")
            break
        else:
            print("OpÃ§Ã£o invÃ¡lida.")

        input("\nPressione Enter para continuar...")

if __name__ == "__main__":
    menu()
